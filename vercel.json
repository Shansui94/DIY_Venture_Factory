{
    "rewrites": [
        {
            "source": "/api/iot-config",
            "destination": "/api/iot_setup"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/agent/chat.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "api/agent/vision.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "api/agent/parse-text.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "api/agent/debug-models.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "api/iot_setup.ts": {
            "maxDuration": 10,
            "memory": 1024
        }
    }
}