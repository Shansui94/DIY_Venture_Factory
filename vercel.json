{
    "rewrites": [
        {
            "source": "/api/agent/chat",
            "destination": "/api/agent/chat"
        },
        {
            "source": "/api/agent/vision",
            "destination": "/api/agent/vision"
        },
        {
            "source": "/api/agent/parse-text",
            "destination": "/api/agent/parse-text"
        },
        {
            "source": "/api/agent/debug-models",
            "destination": "/api/agent/debug-models"
        },
        {
            "source": "/api/iot-config",
            "destination": "/api/iot-config"
        },
        {
            "source": "/iot-config",
            "destination": "/api/iot-config"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/agent/chat.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "api/agent/vision.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "api/agent/parse-text.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "api/agent/debug-models.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "api/iot-config.ts": {
            "maxDuration": 10,
            "memory": 1024
        }
    }
}